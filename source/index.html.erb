---
title: Welcome to Middleman
---
<div class="pure-g">
  <div class="sidebar pure-u-1 pure-u-md-1-4">
    <div class="header">
      <h1 class="brand-title">A Sample Blog</h1>
      <h2 class="brand-tagline">Creating a blog layout using Pure</h2>
      <nav class="nav">
        <ul class="nav-list">
          <li class="nav-item">
            <a class="pure-button" href="http://purecss.io">Pure</a>
          </li>
          <li class="nav-item">
            <a class="pure-button" href="http://yuilibrary.com">YUI Library</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
  <div class="content pure-u-1 pure-u-md-3-4">
    <div class="posts">
      <h2 class="content-subhead">
        Recent Posts
      </h2>
      <section class="post">
        <header class="post-header">
          <%= image_tag lorem.image('50x50', :random_color => true), class: 'post-avatar' %>
          <h3 class="post-title"><%= lorem.sentence %></h3>
          <p class="post-meta">
            By <a href="" class="post-author"><%= lorem.word %></a>
            under
            <% 3.times do %>
              <a href="" class="post-category label"><%= lorem.word %></a>
            <% end %>
          </p>
        </header>
        <div class="post-description">
          <p><%= lorem.paragraph %></p>
          <p><a href="#">더 읽기</a></p>
        </div>
      </section>
    </div>
    <%= partial "partials/layouts/navbar" %>
  </div>
</div>
