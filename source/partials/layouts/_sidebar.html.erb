<div class="sidebar pure-u-1 pure-u-md-1-4">
  <div class="header">
    <h1 class="brand-title"><%= link_to config[:site_title], '/' %></h1>
    <h2 class="brand-tagline"><%= config[:site_description] %></h2>
    <nav class="nav">
      <ul class="nav-list">
        <% get_taxonomies("category").each do |category, count| %>
          <li class="nav-item">
            <% link_to category_path(category), class: "pure-button" do %>
              <%= category %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
